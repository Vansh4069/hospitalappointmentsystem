@model HospitalAppointmentSystem.Models.Doctor
<style>
    body{
        background: url(https://wallpaperaccess.com/full/4113244.jpg);
        background-size: cover;
        font-family: Arial, sans-serif;
    }
</style>

<h1 style="text-align: center; font-size: 32px; font-weight: bold; color: #fff; background-color: #007bff; padding: 15px; border-radius: 8px; box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);"> Add Doctor</h1>

<form asp-action="Create" style="max-width: 600px; margin: 20px auto; padding: 20px; background: #f9f9f9; border-radius: 8px; box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);">
    <div class="form-group" style="margin-bottom: 15px;">
        <label asp-for="Name" class="control-label" style="font-weight: bold;">Doctor Name</label>
        <input asp-for="Name" class="form-control" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin-bottom: 15px;">
        <label asp-for="Specialty" class="control-label" style="font-weight: bold;">Specialty</label>
        <input asp-for="Specialty" class="form-control" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;" />
        <span asp-validation-for="Specialty" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin-bottom: 15px;">
        <label asp-for="ContactInfo" class="control-label" style="font-weight: bold;">Contact Info</label>
        <input asp-for="ContactInfo" class="form-control" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;" />
        <span asp-validation-for="ContactInfo" class="text-danger"></span>
    </div>
    <div style="text-align: center;">
        <button type="submit" style="padding: 12px 20px; background-color: #007bff; color: white; border: none; border-radius: 5px; font-weight: bold; cursor: pointer; box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);"> Add Doctor</button>
        <a asp-action="Index" style="padding: 12px 20px; background-color: #6c757d; color: white; text-decoration: none; border-radius: 5px; font-weight: bold; margin-left: 10px; display: inline-block; box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);"> Back to List</a>
    </div>
</form>
