<style>
    body {
        background: url(https://wallpaperaccess.com/full/4113244.jpg);
        background-size: cover;
        font-family: Arial, sans-serif;
    }

    h1 {
        text-align: center;
        font-size: 32px;
        font-weight: bold;
        color: #fff;
        background-color: #007bff;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
    }

    .container {
        max-width: 1000px;
        margin: 40px auto;
        padding: 20px;
        background: rgba(255, 255, 255, 0.8); /* Slight transparency for readability */
        border-radius: 8px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
        font-weight: bold;
    }

    .table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
        background-color: #fff;
        border-radius: 8px;
        overflow: hidden;
    }

        .table th, .table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #007bff;
            color: white;
            font-weight: bold;
        }

        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table tr:hover {
            background-color: #f1f1f1;
        }

    .btn-warning, .btn-danger {
        padding: 8px 16px;
        border-radius: 5px;
        color: white;
        font-weight: bold;
    }

    .btn-warning {
        background-color: #ffc107;
    }

    .btn-danger {
        background-color: #dc3545;
    }

        .btn-warning:hover, .btn-danger:hover {
            opacity: 0.8;
        }
</style>

<div class="container">
    <h1>Appointments</h1><br>
    <a asp-action="Create" class="btn-primary">Schedule New Appointment</a>
    <table class="table">
        <thead>
            <tr>
                <th>Patient</th>
                <th>Doctor</th>
                <th>Appointment Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.Patient?.Name</td>
                    <td>@appointment.Doctor?.Name</td>
                    <td>@appointment.AppointmentDate.ToShortDateString()</td>
                    <td>@appointment.Status</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@appointment.AppointmentID" class="btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@appointment.AppointmentID" class="btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="footer">
        <p>&copy; 2025 Hospital Appointment System | All rights reserved.</p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</div>

